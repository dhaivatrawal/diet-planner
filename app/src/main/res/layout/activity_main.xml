<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@mipmap/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:id="@+id/share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/share"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"/>

            <ImageView
                android:id="@+id/rateMe"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/rate"
                android:layout_toLeftOf="@id/share"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"/>

            <ImageView
                android:id="@+id/buttonShowCustomDialog"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/menu"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"/>


        </RelativeLayout>
        <TextView
            android:id="@+id/txtone"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/reg"
            android:layout_marginTop="100dp"
            android:textColor="#ffffff"
            android:textSize="45dp"
            android:text="Diet Planner"/>

        <View
            android:id="@+id/vone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtone"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="#425a5a"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardone"
            android:layout_centerHorizontal="true"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="10dp"
            app:cardElevation="10dp"
            android:layout_below="@+id/vone"
            app:cardUseCompatPadding="true"
            android:layout_margin="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/v_flipper"
                    android:src="@mipmap/image_1"
                    android:scaleType="fitXY">
                </ImageView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="220dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/reg"
            android:textColor="#425a5a"
            android:textSize="17dp"
            android:text="Select your option"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardMaxElevation="20dp"
            app:cardElevation="20dp"
            app:cardUseCompatPadding="true"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/ccdd">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rrr">

                <TextView
                    android:id="@+id/gain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#142929"
                    android:textSize="35dp"
                    android:text="Gain Weight"
                    android:fontFamily="@font/aaaa"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerHorizontal="true"/>


                <View
                    android:id="@+id/vvv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/gain"
                    android:layout_width="200dp"
                    android:layout_height="2dp"
                    android:background="#425a5a"/>

                <TextView
                    android:id="@+id/loose"
                    android:layout_below="@+id/vvv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#142929"
                    android:textSize="35dp"
                    android:text="Loose Weight"
                    android:fontFamily="@font/aaaa"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</LinearLayout>